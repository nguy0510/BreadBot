{
    "compileOnSave":true,
    "compilerOptions":{
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "target":"es6",
        "module": "commonjs",
        "outDir":"dist",
        "removeComments": true,
        "strict": false,
        "skipLibCheck":true,
        "strictNullChecks":true,
        "noImplicitThis":true,
        "inlineSourceMap":true,
        "moduleResolution":"node"
    },
    "include":[
        "src"
    ],
    "exclude":[
        "node_modules"
    ]
}